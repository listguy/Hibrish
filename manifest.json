{
  "name": "Hibrish",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Nitzan Listman",
  "permissions": ["contextMenus", "clipboardWrite"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Hibrish"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
